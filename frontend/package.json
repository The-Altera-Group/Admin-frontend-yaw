{
  "name": "altera-system-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Microfrontend setup for Altera System with Vite",
  "private": true,
  "workspaces": [
    "shell",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=shell\" \"npm run dev --workspace=apps/teacher-web-app\" \"npm run dev --workspace=apps/admin-web-app\" \"npm run dev --workspace=apps/parent-web-app\"",
    "build": "npm run build --workspaces",
    "build:shell": "npm run build --workspace=shell",
    "build:teacher": "npm run build --workspace=apps/teacher-web-app",
    "build:admin": "npm run build --workspace=apps/admin-web-app",
    "build:parent": "npm run build --workspace=apps/parent-web-app",
    "preview": "npm run preview --workspace=shell",
    "clean": "rm -rf node_modules && npm run clean --workspaces",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}