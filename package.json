{
  "name": "altera-system",
  "version": "1.0.0",
  "description": "A comprehensive school management system designed to streamline administrative, academic, and communication tasks within a school",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "dev:parent-app": "pnpm --filter @altera/parent-app dev",
    "dev:teacher-portal": "pnpm --filter @altera/teacher-portal dev",
    "dev:admin-portal": "pnpm --filter @altera/admin-portal dev",
    "build:apps": "pnpm --filter \"./apps/*\" build",
    "build:packages": "pnpm --filter \"./packages/*\" build",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "backend:build": "cd services/school-springboot && mvn clean install",
    "backend:run": "cd services/school-springboot && mvn spring-boot:run"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "keywords": [
    "school-management",
    "education",
    "monorepo",
    "react",
    "react-native",
    "spring-boot",
    "microservices"
  ],
  "author": "Altera Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/altera-group/altera-system.git"
  },
  "bugs": {
    "url": "https://github.com/altera-group/altera-system/issues"
  },
  "homepage": "https://github.com/altera-group/altera-system#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
